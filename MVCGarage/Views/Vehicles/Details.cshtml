@model DetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="m-2">
    <a asp-action="Index">Back to Garage</a>
</div>

<h2>Details</h2>
<hr />
<div>
    <h5>Vehicle</h5>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistrationNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleTypeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VehicleTypeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WheelCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WheelCount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
    </dl>
    <h5>Owner</h5>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerFirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OwnerFirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerLastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OwnerLastName)
        </dd>
    </dl>
    @if (Model.ArrivalTime != null)
    {
        <h5>Parking</h5>
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ArrivalTime)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ArrivalTime)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ParkedTime)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ParkedTime)
            </dd>
        </dl>
    }
</div>
<div>
    <a asp-action="Modify" asp-route-id="@Model?.Id" class="btn btn-dark">Modify</a>
</div>
