<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Garage 3.0</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/MVCGarage.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @if((bool)(ViewData["useLinkTag"] ?? false)) { @Html.Raw($"<link rel=\"stylesheet\" href=\"/css/{ViewData["LinkCSSName"]}\" />"); }
</head>
<body class="bg-secondary bg-opacity-10">
    <div class="container-fluid bg-dark">
        <div class="container p-2 ps-0">
            <div class="row">
                <div class="col">
                    <a class="nav-link link-info" asp-area="" asp-controller="Vehicles" asp-action="Index">
                        <h5>Garage 3.0</h5>
                    </a>
                </div>
                <div class="col">
                    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark float-end p-0 m-0">
                        <div class="container-fluid justify-content-end">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="navbar-collapse text-end collapse d-sm-inline-flex justify-content-between">
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link text-light" asp-area="" asp-controller="Members" asp-action="Index">Members</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-light" asp-area="" asp-controller="Vehicles" asp-action="Index">Parked Vehicles</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2022 - MVC Garage - <a href="https://github.com/mskogfeldt/MVCGarage">View at GitHub</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
